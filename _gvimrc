" vim:set ts=4 sts=4 sw=4 tw=0:

" フォント設定
if has('win32')
  "set guifont=ＭＳ_ゴシック:h8:cSHIFTJIS
  set guifont=MS_Gothic:h8:cSHIFTJIS
  set linespace=-1
  if has('printer')
    "set printfont=ＭＳ_ゴシック:h8:cSHIFTJIS
    set printfont=MS_Gothic:h8:cSHIFTJIS
  endif
endif

" ウインドウ設定
"set guioptions+=C
set guioptions-=T
set guioptions-=m
set guioptions-=a
set guioptions-=r
set guioptions-=R
set guioptions-=l
set guioptions-=L
set guioptions-=L
set guioptions-=e
set columns=140
set lines=60

" マウス設定
set mouse=a
set nomousefocus
set mousehide
set cmdheight=1

colorscheme neon2
set background=dark

" クリックした単語をハイライト表示させる
nnoremap <expr> <LeftRelease> <SID>click_hilight()

function! s:click_hilight()
  let word = expand('<cword>')
  if !empty(word)
      call Lsearch#Search(word)
  else
      call Lsearch#Clear()
  endif
endfunction


"if has("win32")
  "autocmd FocusGained * set transparency=255
  "autocmd FocusLost   * set transparency=230
"endif
